
   
        cout << hex << nouppercase << showbase << left;
        cout << (long long)A << endl;

        cout << fixed << setprecision(2) << setw(15) << right << setfill('_') << showpos;
        cout << B << endl;
      
        cout << scientific << setprecision(9) << uppercase << noshowpos;
        cout << C << endl;


